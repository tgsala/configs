# ~/.gitconfig
[core]
  editor = vim
[user]
  name = Tiago Sala
  email = tgsala@gmail.com
[push]
  default = simple
[credential]
  helper = cache --timeout=14400
[gc]
  auto = 256
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[alias]
  hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  type = cat-file -t
  dump = cat-file -p
  cp = cherry-pick
  cho = checkout
  chom = checkout master
  chob = checkout -b
  com = commit
  comm = commit -m
  a = add -A
  b = branch
  bdel = branch -D
  rb = rebase
  rbm = rebase master
  rba = rebase --abort
  rbs = rebase --skip
  rbc = rebase --continue
  amend = commit --amend
  unstage = reset HEAD --
  rsh = reset --hard
  rss = reset --soft
  st = status
  mt = mergetool
  discard = checkout -- *
  mg = merge --no-ff --no-edit
  tagdel = "!f() { git tag --delete $1 && git push --delete origin $1; }; f"
